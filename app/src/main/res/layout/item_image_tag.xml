<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="100dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_text_container"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/ll_image_container"
        android:layout_alignBottom="@id/ll_image_container"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ll_image_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_title"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/tv_description"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            tools:text="Description"
            />

        <TextView
            android:id="@+id/tv_date"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="Datetime"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image_container"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        >
        <ImageView
            android:id="@+id/iv_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:src="@drawable/ic_placeholder"
            />

    </LinearLayout>

</RelativeLayout>